{
  "compilerOptions": {
    "target": "ES2022",
    "allowJs": true,
    "strict": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@src/": ["./src"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}