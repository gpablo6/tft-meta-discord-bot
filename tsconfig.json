{
  "compilerOptions": {
    "lib": ["ES2022"],
    "baseUrl": ".",
    "target": "ES2022",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@src/": ["./src"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}