{
    "compilerOptions": {
      "baseUrl": ".",
      "target": "ESNext",
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "incremental": true,
      "paths": {
        "@src/": ["./src"]
      }
    },
    "include": [
      "/*.ts"
    ],
    "exclude": ["node_modules"]
  }