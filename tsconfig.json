{
  "compilerOptions": {
    "noImplicitAny": false,
    "baseUrl": ".",
    "target": "ES2022",
    "allowJs": true,
    "strict": true,
    "outDir": "dist",
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/*.ts"],
  "exclude": [
    "node_modules",
    "./coverage",
    "./dist",
    "__tests__",
    "jest.config.js"
  ]
}